{
  "name": "linter-scalac",
  "main": "./lib/linter-scalac",
  "version": "1.4.4",
  "description": "Lint Scala on the fly, using scalac. Also possible to use other Scala linters, such as WartRemover, via compiler options.",
  "repository": "https://github.com/AtomLinter/linter-scalac",
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "atom --test spec"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.0.0",
    "glob": "7.1.3",
    "mkdirp": "0.5.1"
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jasmine-fix": "1.3.1",
    "rimraf": "2.6.3"
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
}
